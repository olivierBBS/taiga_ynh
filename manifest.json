{
    "id": "taiga",
    "name": "Taiga",
    "description": {
        "en": "Agile project management platform",
        "fr": "Plateforme de gestion de projet agile"
    },
    "version": "6.7.0~ynh1",
    "maintainers": ["unedeplus"],
    "upstream": {
        "license": "AGPL-3.0-or-later",
        "website": "https://taiga.io/",
        "demo": "https://tree.taiga.io/discover",
        "admindoc": "https://docs.taiga.io/",
        "userdoc": "https://docs.taiga.io/",
        "code": "https://github.com/taigaio"
    },
    "integration": {
        "yunohost": ">= 11.2",
        "architectures": "all",
        "multi_instance": true,
        "ldap": false,
        "sso": false,
        "disk": "500M",
        "ram": {
            "build": "500M",
            "runtime": "256M"
        }
    },
    "install": {
        "domain": {
            "type": "domain"
        },
        "path": {
            "type": "path",
            "default": "/taiga"
        },
        "init_main_permission": {
            "type": "group",
            "default": "visitors"
        },
        "admin": {
            "type": "user"
        },
        "password": {
            "type": "password"
        }
    },
    "resources": {
        "sources": {
            "main": {
                "url": "https://github.com/taigaio/taiga-back/archive/refs/tags/6.7.0.tar.gz",
                "sha256": "3582489b7b2af4ba22f455625bcd1c8e102ded0070aee09ddec9f04c3f0be85e"
            },
            "front": {
                "url": "https://github.com/taigaio/taiga-front/archive/refs/tags/6.7.0.tar.gz",
                "sha256": "037b80779d7c702e5a8a06abefe5b7ab6b2f997e73334aea628fb0fc70e37522"
            }
        },
        "apt": [
            "python3",
            "python3-venv", 
            "python3-pip",
            "python3-dev",
            "build-essential",
            "libpq-dev",
            "git",
            "gettext",
            "libxml2-dev",
            "libxslt1-dev",
            "zlib1g-dev",
            "libjpeg-dev",
            "libfreetype6-dev",
            "libtiff5-dev",
            "redis-server",
            "rabbitmq-server",
            "postgresql",
            "postgresql-contrib"
        ]
    }
}
